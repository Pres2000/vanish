<div class="container-center">
  <% @user_bookings.each do |booking| %>
    <div class="card-trip col-4 card-booking">
      <% booking.van.photos.each do |photo| %>
        <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
      <% end  %>
        <div class="card-trip-infos">
          <div>
              <h2> <%= booking.van.listing_title %> </h2>
                <p><%= booking.van.description %></p>
                <p><%= booking.starting_date %></p>
                <p><%= booking.end_date %></p>
              <%#   <% booking.van.photos.each do |photo| %>
                <%#  <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
              <%#     <% end %>
          </div>
              <h2 class="card-trip-pricing"><i class="fa-brands fa-bitcoin"></i> <%= booking.van.cost %>/night</h2>
            <%#   <img src="https://loremflickr.com/320/240/paris,girl/all" class="card-trip-user avatar-bordered" /> %>
            <%= cl_image_tag(booking.van.user.photo.key, :class => "card-trip-user avatar-bordered", crop: :thumb, gravity: :face) %>
        </div>
      </div>
  <% end %>
</div>
